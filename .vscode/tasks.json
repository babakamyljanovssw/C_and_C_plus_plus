{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc/g++ build active file",
      "command": "cmd",
      "args": [
        "/c",
        "if",
        "${fileExtname}",
        "==",
        ".cpp",
        "(",
        "C:\\msys64\\ucrt64\\bin\\g++.exe",
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}\\executables\\${fileBasenameNoExtension}.exe",
        ")",
        "else",
        "(",
        "C:\\msys64\\ucrt64\\bin\\gcc.exe",
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}\\executables\\${fileBasenameNoExtension}.exe",
        ")"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
